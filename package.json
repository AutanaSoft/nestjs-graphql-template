{
  "name": "nestjs-graphql-template",
  "version": "1.0.0",
  "description": "Template for Nestjs services with Fastify, SWC, GraphQL and Prisma",
  "author": "admin@autanasoft.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AutanaSoft/nestjs-graphql-template/issues"
  },
  "homepage": "https://github.com/AutanaSoft/nestjs-graphql-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AutanaSoft/nestjs-graphql-template.git"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "template"
  ],
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=8.x"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "pnpm build:clean && pnpm prisma generate && pnpm lint:fix && nest build --path tsconfig.prod.json",
    "start": "node dist/main.js",
    "start:dev": "tsnd --inspect=0.0.0.0:9229 --respawn src/main.ts",
    "test": "rimraf coverage .nyc_output && concurrently 'pnpm:test:unit' 'pnpm:test:e2e' && pnpm coverage:merge",
    "test:unit": "jest tests/src --coverageDirectory coverage/unit",
    "test:e2e": "jest tests/e2e --coverageDirectory coverage/e2e",
    "coverage:merge": "ts-node scripts/merge-coverage.ts",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .eslintignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build:clean": "rimraf dist; exit 0",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@as-integrations/fastify": "^2.1.1",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/platform-fastify": "^10.3.0",
    "@prisma/client": "^5.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.8.1",
    "prisma": "^5.8.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "fs-extra": "^11.2.0",
    "graphql-type-json": "^0.3.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.1",
    "prisma-graphql-type-decimal": "^3.0.0",
    "prisma-nestjs-graphql": "^20.0.2",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
